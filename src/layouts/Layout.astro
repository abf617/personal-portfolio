---
import '../styles/global.css';
import '../styles/crt-effects.css';
import MatrixBackground from '../components/MatrixBackground.jsx';
import ConsoleGreeting from '../components/ConsoleGreeting.astro';

interface Props {
	title?: string;
	description?: string;
}

const {
	title = 'Allen Aronis Web Development',
	description = '90s futurist cyberpunk portfolio website showcasing web development expertise'
} = Astro.props;

const fullTitle = title === 'Allen Aronis Web Development' ? title : `${title} | Allen Aronis Web Development`;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<meta name="generator" content={Astro.generator} />
		<title>{fullTitle}</title>
	</head>
	<body class="flex flex-col min-h-screen">
		<ConsoleGreeting />
		<MatrixBackground client:load />
		<div class="crt-wrapper flex-grow flex flex-col color-rotation">
			<slot />
		</div>
	</body>
</html>
