import '../styles/global.css';
import '../styles/crt-effects.css';
import MatrixBackground from '../components/MatrixBackground.jsx';
import ConsoleGreeting from '../components/ConsoleGreeting.astro';

interface Props {
	title?: string;
	description?: string;
	image?: string;
	keywords?: string;
}

const {
	title = 'Allen Aronis Web Development',
	description = 'Portland-based web developer specializing in React, Node.js, and modern web applications. Expert in full-stack development, cloud architecture, and responsive design.',
	image = '/og-image.jpg',
	keywords = 'web developer Portland, Portland web developer, React developer Portland, full-stack developer, Node.js developer, web development Portland Maine, freelance web developer Portland, software engineer Portland'
} = Astro.props;

const fullTitle = title === 'Allen Aronis Web Development' ? title : `${title} | Allen Aronis Web Development`;
const siteUrl = Astro.site || 'https://www.allenaroniswebdevelopment.com';
const canonicalURL = new URL(Astro.url.pathname, siteUrl);
const ogImageURL = new URL(image, siteUrl);
